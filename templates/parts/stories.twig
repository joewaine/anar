



{% for item in craft.entries.section('stories') %}
<section id="{{ item.slug }}" class="body-section stories">
  <div class="storiesContainerHeader">stories</div>

<div class="stories-layer">


{% set step = 0 %}
{% for block in item.stories %}
    {% if block.type == "text" %}
{% set step = step + 1 %}

<div class="story-container" data="{{step}}" ontouchstart="this.classList.toggle('hover');" data-type="{{block.type}}">
  <div class="story">
    <div class="front">
      <!-- front content -->
      <img class="front-image" src="/img/stories/story-{{step}}.svg">
    </div>


      {% if block.storyImage %}




        {% for asset in block.previewImage %}

          <div class="back" style="background-image: url(/img/{{ asset.getPath() }})">



           <img  src="/img/stories/masks/story-{{step}}.svg">
           </div>
        {% endfor %}
      {% else %}






          <div class="back" style="background-image: url(/img/stories-no-number/pommes.png)">
            <img src="/img/stories/masks/story-{{step}}.svg">
    </div>
      {% endif %}
</div>

    <div class="story-title">
      {{ block.storyTitle }}
  </div>
    <div class="story-text">
      {{ block.textContent }}
  </div>
<div class="story-image">
{% for asset in block.storyImage %}
    <img src="/img/{{ asset.getPath() }}">
{% endfor %}
</div>




</div>




{% if step % 5 == 3 %}<div class="story-container story-blank">&nbsp;</div>{% endif %}
